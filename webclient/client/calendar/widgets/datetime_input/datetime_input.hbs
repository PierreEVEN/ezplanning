{{#if has_time}}
    <div class="calendar-dt-time">
        <button class="calendar-dt-timeval" {{object "time"}} onpointerdown="{{ctx "edit_time(event, true)"}}" onmousedown="{{ctx "edit_time(event, false)"}}">{{time}}</button>
    </div>
{{/if}}
{{#if has_sep}}
<div class="calendar-dt-separator"></div>
{{/if}}
{{#if has_date}}
    <div class="calendar-dt-date">
        {{#if has_year}}
            <button class="calendar-dt-year" {{object "year"}}>{{year}}</button>
        {{/if}}
        <button class="calendar-dt-date" {{object "date"}}>{{date}}</button>
    </div>
{{/if}}